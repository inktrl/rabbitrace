{
	"name": "rabbitmq",
	"displayName": "RabbitMQ",
	"description": "A developer/management tool to help monitor RabbitMQ queues and exchanges",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:rabbitmq.connections",
		"onCommand:rabbitmq.newConnection"
	],
	"main": "./src/extension.js",
	"contributes": {
		"views": {
			"rabbitmq": [
				{
					"id": "rabbitmq.connections",
					"name": "Connections"
				},
				{
					"id": "rabbitmq.exchanges",
					"name": "Exchanges"
				},
				{
					"id": "rabbitmq.queues",
					"name": "Queues"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "rabbitmq",
					"title": "RabbitMQ",
					"icon": "icon.png"
				}
			]
		},
		"commands": [
			{
				"command": "rabbitmq.newConnection",
				"title": "New Connection",
				"icon": "$(plus)",
				"category": "RabbitMQ"
			},
			{
				"command": "rabbitmq.makeConnection",
				"title": "Connect",
				"icon": "$(debug-disconnect)",
				"category": "RabbitMQ"
			},
			{
				"command": "rabbitmq.newExchange",
				"title": "New Exchange",
				"icon": "$(plus)",
				"category": "RabbitMQ"
			},
			{
				"command": "rabbitmq.newQueue",
				"title": "New Queue",
				"icon": "$(plus)",
				"category": "RabbitMQ"
			}	
		],
		"menus": {
			"view/title": [
			  {
				"command": "rabbitmq.newConnection",
				"when": "view == rabbitmq.connections",
				"group": "navigation"
			  },
			  {
				"command": "rabbitmq.newExchange",
				"when": "view == rabbitmq.exchanges",
				"group": "navigation"
			  },
			  {
				"command": "rabbitmq.newQueue",
				"when": "view == rabbitmq.queues",
				"group": "navigation"
			  }
			],
			"view/item/context": [
				{
					"command": "rabbitmq.makeConnection",
					"when": "view == rabbitmq.connections",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"amqplib": "^0.8.0"
	}
}
